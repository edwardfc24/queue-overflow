@{
    ViewBag.Title = "QueueOverflow";
    Layout = "~/Views/_LayoutGeneral.cshtml";
}

<h2>Usuarios</h2>
@model Tuple<QueueOverflow.Models.Usuario, QueueOverflow.Models.Usuario>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-6">
        <div class="form-horizontal">
            <h4>Registrar Usuario</h4>
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Item1.idUsuario)
            <div class="form-group">
                @Html.LabelFor(model => model.Item1.txtNombreUsuario, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Item1.txtNombreUsuario, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Item1.txtNombreUsuario)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Item1.txtCorreo, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Item1.txtCorreo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Item1.txtCorreo)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Item1.txtPassword, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.PasswordFor(model => model.Item1.txtPassword, new { @class = "" })
                    @Html.ValidationMessageFor(model => model.Item1.txtPassword)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Item1.txtNombreReal, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Item1.txtNombreReal, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Item1.txtNombreReal)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar e Ingresar" class="btn btn-info" />
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-horizontal">
            <h4>Ingresar</h4>
            <div class="form-group">
                @Html.LabelFor(model => model.Item2.txtNombreUsuario, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Item2.txtNombreUsuario, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Item2.txtPassword, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.PasswordFor(model => model.Item2.txtPassword, new { @class = "" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ingresar" class="btn btn-info" />
                </div>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
